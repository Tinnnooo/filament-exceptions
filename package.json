{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npx @tailwindcss/cli -i resources/css/filament-exceptions.css -o resources/dist/filament-exceptions.css --watch",
        "build": "npx @tailwindcss/cli -i resources/css/filament-exceptions.css -o resources/dist/filament-exceptions.css --minify && npm run purge",
        "purge": "filament-purge -i resources/dist/filament-exceptions.css -o resources/dist/filament-exceptions.css -v 3.x",
        "prettier": "npx prettier --write .",
        "deploy": "npm run build && npm run prettier"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "esbuild": "^0.25.10",
        "postcss": "^8.4.26",
        "postcss-import": "^15.1.0",
        "prettier": "^3.0.0",
        "prettier-plugin-blade": "^1.6.10",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11"
    }
}
